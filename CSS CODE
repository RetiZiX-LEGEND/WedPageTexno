}

:root {
    --color-bg1: #dff9fb;
    --color-bg2: #ffffff;
    --text-color: #000000;
}

h1, h2, h3, p, ul li {
    color: var(--text-color);
    transition: color 0.5s ease-in-out;
}

.gradient-bg {
    position: fixed;
    width: 100vw;
    height: 100vh;
    top: 0;
