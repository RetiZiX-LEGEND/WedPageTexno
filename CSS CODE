    margin: auto;
}

/* Анимация изменения цвета текста */
@keyframes colorChange {
    0% { color: #ff6347; }
    25% { color: #ff4500; }
    50% { color: #32cd32; }
    75% { color: #1e90ff; }
    100% { color: #ff6347; }
}

/* Применение анимации при наведении */
h1:hover, h2:hover, h3:hover, p:hover, ul li:hover {
    animation: colorChange 2s infinite;
}

